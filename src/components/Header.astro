<style>
  :root {
    --darkmode-lighter: #1a1a1c;
    --darkmode-dark: #141415;
    --darkmode-white: #cbcfd2;
    --darkmode-white-sub: #908a8a;
  }

  header {
    margin: 0;
    padding: 0 1em;
    background: var(--darkmode-lighter);
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--darkmode-white);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }

  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
